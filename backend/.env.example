# SiteAuditor Backend Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Google PageSpeed Insights API Key
GOOGLE_PAGESPEED_API_KEY=yourAPIKey

# Database
DATABASE_URL=sqlite+aiosqlite:///./siteauditor.db

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Request Timeouts (seconds)
REQUEST_TIMEOUT=30
SSL_TIMEOUT=10

# Wappalyzer API Key (Optional)
WAPPALYZER_API_KEY=

# Email Configuration
MAIL_USERNAME=apikey
MAIL_PASSWORD=your_api_key
MAIL_FROM=no-reply@siteauditor.com
MAIL_PORT=587
MAIL_SERVER=smtp.sendgrid.net
MAIL_FROM_NAME="SiteAuditor Watchdog"
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# --- SMTP Configuration (Emails) ---
# To enabling real emails, fill these out.
# For Gmail, you need to use an "App Password", not your real password.
# https://myaccount.google.com/apppasswords
MAIL_USERNAME=YourMail
MAIL_PASSWORD=YourPSWGoogle
MAIL_FROM=noreply@siteauditor.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
